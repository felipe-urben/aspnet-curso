@{
    ViewData["Title"] = "Criar contato";
}


<div class="text-center">
    <h1 class="display-4">Criar contato</h1>
</div>

<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control"placeholder="Digite o nome do contato">
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" placeholder="Digite o email do contato">
    </div>

    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o celular do contato">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
     <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="index">Voltar</a>
</form>
