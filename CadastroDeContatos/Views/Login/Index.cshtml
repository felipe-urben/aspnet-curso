@model LoginModel
@{
	Layout = "_LayoutDeslogado";
	ViewData["Title"] = "Login";
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-outline-danger btn-sm close-alert">X</button>
        @TempData["MensagemErro"]
    </div>
}
<div class="login">
    
    <form asp-controller="Login" asp-action="Entrar" method="post" class="form-login">

        <div class="form-group">
            <label for="login">Login</label>
            <input type="text" asp-for="Login" class="form-control" placeholder="Digite seu login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>

        <div class="form-group">
            <label for="senha">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
       
    </form>
</div>